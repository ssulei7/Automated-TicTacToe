<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs478.suleiman.cs478project4.MainActivity">


    <GridLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/myBoard"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <Button
            android:id="@+id/piece1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:layout_row ="0"
            android:layout_column="0"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/piece2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/piece3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/piece4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/piece5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/piece6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/piece7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/piece8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/piece9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="30dp"/>
    </GridLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/myBoard"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
